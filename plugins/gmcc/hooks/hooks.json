{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/detect_repo.sh"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/kbite_triggers_cache.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/kbite_check.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/auto_fam_sync.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Before stopping, verify ECLAIR workflow state if active. Check if $GMCC_ECLAIR_SESSION is set. If an ECLAIR session is in progress, confirm all phase requirements are met. If ECLAIR is not active or all phases are complete, respond with {\"ok\": true}. If ECLAIR is active with incomplete work, respond with {\"ok\": false, \"reason\": \"ECLAIR session in progress - phase X incomplete\"}."
          }
        ]
      }
    ]
  }
}
